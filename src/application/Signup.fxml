<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="762.0" prefWidth="1333.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UserAccountController">

    <left>
        <AnchorPane prefHeight="762.0" prefWidth="856.0" style="-fx-background-color: black;">
            <children>
                <ImageView fitHeight="723.0" fitWidth="386.0" layoutX="235.0" layoutY="38.0" preserveRatio="true">
                    <image>
                        <Image url="@../images/Sign.jpg" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </left>

    <right>
        <AnchorPane prefHeight="762.0" prefWidth="480.0" style="-fx-background-color: black;">
            <children>
                <Text fill="WHITE" layoutX="90" layoutY="115" text="Create an account and start a joyful journey with us" wrappingWidth="330">
                    <font>
                        <Font size="27" />
                    </font>
                </Text>

                <TextField fx:id="signupEmail" layoutX="96" layoutY="315" prefHeight="40" prefWidth="320" promptText="Enter Your Email" />

                <PasswordField fx:id="signupPassword" layoutX="96" layoutY="384" prefHeight="40" prefWidth="320" promptText="Enter New Password" />

                <PasswordField fx:id="confirmPassword" layoutX="96" layoutY="452" prefHeight="40" prefWidth="320" promptText="Confirm New Password" />

                <Button layoutX="96" layoutY="520" onAction="#handleSignup" prefHeight="40" prefWidth="320" text="Start Creating" />
            </children>
        </AnchorPane>
    </right>

</BorderPane>
